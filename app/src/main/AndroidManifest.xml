<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lyondrydelivery">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/dlogo_icon"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/dlogo_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.LyondryDelivery"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activity.DeliveyCompleteListItemShowActivity"></activity>
        <activity android:name=".Activity.PickupCompliteListItomShowActivity" />
        <activity android:name=".Activity.InviceActivity" />
        <activity
            android:name=".Activity.EditeAddNewItemsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.DeliveryDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.AddNewItemActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.PickupDeliveryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.ReportsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.DeliveryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.PickupActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>